<% content_for :title, "Page Not Found" %>
<% content_for :description, "The page you're looking for doesn't exist." %>

<article class="min-h-[60vh] flex items-center justify-center px-4">
  <section class="max-w-[600px] mx-auto text-center">
    <!-- 404 Badge -->
    <div class="mb-8">
      <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 border border-gray-200 shadow-sm">
        <span class="text-3xl font-mono font-semibold text-gray-700">404</span>
      </div>
    </div>

    <!-- Main Heading -->
    <h1 class="text-[3rem] md:text-[3.5rem] text-gray-700 leading-tight tracking-[-0.04em] font-medium mb-4">
      Oops! Page not found
    </h1>

    <!-- Description -->
    <p class="text-xl font-normal leading-[1.4] text-gray-400 mb-8 max-w-[500px] mx-auto">
      The page you're looking for might have been moved, deleted, or maybe it never existed in the first place.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <%= link_to "Go back home", root_path, 
          class: "group relative inline-flex h-11 animate-rainbow cursor-pointer items-center justify-center rounded-lg border-0 bg-[length:200%] px-6 py-2 font-medium text-white transition-colors [background-clip:padding-box,border-box,border-box] [background-origin:border-box] [border:calc(0.08*1rem)_solid_transparent] focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 before:absolute before:bottom-[-20%] before:left-1/2 before:z-0 before:h-1/5 before:w-3/5 before:-translate-x-1/2 before:animate-rainbow before:bg-[linear-gradient(90deg,hsl(var(--color-1)),hsl(var(--color-5)),hsl(var(--color-3)),hsl(var(--color-4)),hsl(var(--color-2)))] before:bg-[length:200%] before:[filter:blur(calc(0.8*1rem))] bg-[linear-gradient(#121213,#121213),linear-gradient(#121213_50%,rgba(18,18,19,0.6)_80%,rgba(18,18,19,0)),linear-gradient(90deg,hsl(var(--color-1)),hsl(var(--color-5)),hsl(var(--color-3)),hsl(var(--color-4)),hsl(var(--color-2)))]" %>
      
      <%= link_to "View all tools", tools_path, 
          class: "py-2 px-6 text-sm leading-[18px] text-black group rounded-lg hover:bg-alpha-black-50 bg-transparent border-[1px] border-gray-300 hover:border-gray-300 flex items-center gap-1 shadow-btn-plain-inset-1 shadow-btn-plain-inset-2" %>
    </div>

    <!-- Helpful Links Section -->
    <div class="mt-16 pt-16 border-t border-gray-200">
      <p class="text-sm text-gray-500 mb-6">Here are some helpful links instead:</p>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-[500px] mx-auto">
        <%= link_to articles_path, class: "flex flex-col items-center p-4 rounded-lg hover:bg-gray-50 transition-colors group" do %>
          <div class="flex items-center justify-center w-10 h-10 rounded-md bg-gray-100 text-gray-600 group-hover:bg-white group-hover:border group-hover:border-gray-300 mb-2">
            <%= lucide_icon("newspaper", class: "w-5 h-5") %>
          </div>
          <span class="text-sm font-medium text-gray-900">Blog</span>
          <span class="text-xs text-gray-500">Read our articles</span>
        <% end %>
        
        <%= link_to tools_path, class: "flex flex-col items-center p-4 rounded-lg hover:bg-gray-50 transition-colors group" do %>
          <div class="flex items-center justify-center w-10 h-10 rounded-md bg-gray-100 text-gray-600 group-hover:bg-white group-hover:border group-hover:border-gray-300 mb-2">
            <%= lucide_icon("calculator", class: "w-5 h-5") %>
          </div>
          <span class="text-sm font-medium text-gray-900">Tools</span>
          <span class="text-xs text-gray-500">Financial calculators</span>
        <% end %>
        
        <%= link_to "https://link.maybe.co/discord", target: "_blank", rel: "noopener noreferrer", class: "flex flex-col items-center p-4 rounded-lg hover:bg-gray-50 transition-colors group" do %>
          <div class="flex items-center justify-center w-10 h-10 rounded-md bg-gray-100 text-gray-600 group-hover:bg-white group-hover:border group-hover:border-gray-300 mb-2">
            <%= lucide_icon("message-circle", class: "w-5 h-5") %>
          </div>
          <span class="text-sm font-medium text-gray-900">Support</span>
          <span class="text-xs text-gray-500">Join our Discord</span>
        <% end %>
      </div>
    </div>
  </section>
</article>