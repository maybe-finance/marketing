<section class="flex flex-col gap-4 p-6 ml-2 rounded-lg">
  <div class="flex flex-col gap-3">
    <p class="text-base text-gray-500">Monthly payments</p>
    <p class="text-4xl font-medium"><%= number_to_currency(tool.monthly_payments) %></p>
  </div>

  <hr class="color-[#0B0B0B14]">

  <div class="grid grid-cols-2 gap-4">
    <div class="flex flex-col gap-1">
      <p class="text-sm text-gray-500">Total principal paid</p>
      <p class="text-xl font-medium"><%= number_to_currency(tool.total_principal_paid) %></p>
    </div>

    <div class="flex flex-col gap-1">
      <p class="text-sm text-gray-500">Total interest paid</p>
      <p class="text-xl font-medium"><%= number_to_currency(tool.total_interest_paid) %></p>
    </div>

    <div class="flex flex-col gap-1">
      <p class="text-sm text-gray-500">Total paid</p>
      <p class="text-xl font-medium"><%= number_to_currency(tool.total_paid) %></p>
    </div>

    <div class="flex flex-col gap-1">
      <p class="text-sm text-gray-500">Total number of payments</p>
      <p class="text-xl font-medium"><%= tool.total_number_of_payments %></p>
    </div>
  </div>

  <hr class="color-[#0B0B0B14]">

  <div class="flex flex-col gap-1">
    <p class="text-sm text-gray-500">Estimated payoff date</p>
    <p class="text-xl font-medium"><%= tool.estimated_payoff_date.to_fs(:long_ordinal) %></p>
  </div>
</section>
