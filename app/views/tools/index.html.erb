<%
  title "Free Financial Tools and Calculators"
  description "Try out our financial tools and calculators to help you visualize and understand your financial journey."
%>
<div class="max-w-[1100px] mx-auto text-center">
  <div class="flex flex-col gap-y-2 max-w-[500px] mx-auto text-balance">
    <div class="flex items-center justify-center gap-x-2">
      <h1 class="text-3xl font-medium tracking-tight">Try our free financial tools and calculators</h1>
    </div>
    <p class="text-gray-600">All the interactive tools and calculators you need to visualize and navigate your financial journey.</p>
  </div>
  <div class="flex mx-auto whitespace-nowrap gap-2 py-2 mb-6">
    <%= link_to tools_path,
        class: "px-4 py-2 rounded-full text-sm font-medium #{params[:category].nil? ? 'bg-gray-900 text-white' : 'bg-gray-100 text-gray-500 hover:bg-gray-200'}",
        data: { turbo_frame: "tools_list" } do %>
      All
    <% end %>
    <% Tool.distinct.pluck(:category_slug).compact.each do |category_slug| %>
      <%= link_to tools_path(category: category_slug),
          class: "px-4 py-2 rounded-full text-sm font-medium #{params[:category] == category_slug ? 'bg-gray-900 text-white' : 'bg-gray-100 text-gray-500 hover:bg-gray-200'}",
          data: { turbo_frame: "tools_list" } do %>
        <%= category_slug.titleize %>
      <% end %>
    <% end %>
  </div>
  <div class="grid grid-cols-[repeat(auto-fit,_minmax(min(288px,_100%),_1fr))] gap-4 mt-8">
    <%= render @tools, min_height: "200px" %>
  </div>
</div>
<%= render "shared/cta_waitlist" %>
