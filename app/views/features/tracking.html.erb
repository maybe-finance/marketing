<section class="max-w-5xl mx-auto py-8">
  <p class="mb-6 text-sm text-center">
    <span class="text-gray-500"><%= link_to "Features", "#" %> <%= lucide_icon "chevron-right", class: "text-gray-500 w-4 h-4 inline" %></span> Tracking
  </p>
  <h1 class="font-geist text-2xl font-bold mb-4">All your accounts, in one place</h1>
  <p class="text-2xl font-bold mb-4">Track and keep all your accounts in one place and get a clear view of your finances.</p>
  <div><%= render_signup_form %></div>
  <div class="p-3 mx-auto my-10 bg-black/[0.02] rounded-3xl border border-black/1 shadow-[0px_0px_22.07px_0px_rgba(0,0,0,0.03)]">
    <%= image_tag "screenshot.png", alt: "Maybe Screenshot", class: "w-full border border-black/1 rounded-2xl shadow-[0_7.36px_7.36px_-3.68px_rgba(11,11,11,0.03)] shadow-[0_18.39px_22.07px_-3.68px_rgba(11,11,11,0.08)]" %>
  </div>
</section>
<section>
  <div class="flex flex-col md:flex-row p-6 gap-6 max-w-6xl mb-[5rem] mx-auto">
    <div class="md:w-1/2 p-4">
      <%= image_tag "features/tracking-assets-charted.svg", alt: "Maybe Screenshot", class: "w-full max-w-[460px]" %>
    </div>
    <!-- Right section - Features summary -->
    <div class="font-geist md:w-1/2 p-4 max-w-[480px]">
      <h2 class="text-[2.5rem] leading-[1.1em] tracking-[-0.04em] font-medium mb-4 text-gray-800">All your assets <br />
        <span class="font-normal text-gray-400">and debts, charted</span></h2>
      <div class="space-y-4 mt-6">
        <!-- Feature 1 -->
        <div class="flex">
          <div class="mr-4 w-8 h-8 p-1.5 flex items-center justify-center bg-gray-100 rounded-full">
            <%= lucide_icon "chart-line", class: "text-gray-500 w-5 h-5" %>
          </div>
          <div class="text-[1.125rem] leading-[1.4] tracking-0">
            <h3 class=" text-gray-800 font-medium mb-0">Accounts visualized</h3>
            <p class="text-gray-400 font-normal">Instantly visualize your accounts with intuitive easy to scan charts.</p>
          </div>
        </div>
        <!-- Feature 2 -->
        <div class="flex">
          <div class="mr-4 w-8 h-8 p-1.5 flex items-center justify-center bg-gray-100 rounded-full">
            <%= lucide_icon "history", class: "text-gray-500 w-5 h-5" %>
          </div>
          <div class="text-[1.125rem] leading-[1.4] tracking-0 ">
            <h3 class=" text-gray-800 font-medium mb-0">Historical comparisons</h3>
            <p class="text-gray-400 font-normal">Track changes over time and compare against different periods.</p>
          </div>
        </div>
        <!-- Feature 3 -->
        <div class="flex">
          <div class="mr-4 w-8 h-8 p-1.5 flex items-center justify-center bg-gray-100 rounded-full">
            <%= lucide_icon "lightbulb", class: "text-gray-500 w-5 h-5" %>
          </div>
          <div class="text-[1.125rem] leading-[1.4] tracking-0">
            <h3 class=" text-gray-800 font-medium mb-0">Actionable insight</h3>
            <p class="text-gray-400 font-normal">Monitor and track trends over time to make informed financial choices.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
