<article class="bg-contain bg-top bg-no-repeat" style="background-image: url(<%= asset_path('main-bg.svg') %>)">
  <section class="text-center max-w-[480px] mx-auto mb-10">
    <h1 class="text-[4.5rem] text-gray-700 mx-auto leading-[calc(1em+4px)] tracking-[-0.04em] font-medium mb-4">Clear and simple pricing</h1>
    <p class="text-xl font-normal leading-[1.4] text-gray-500 tracking-normal">Whether you're starting your financial journey or looking to preserve your wealth, Maybe is priced to help you reach your goals.</p>
  </section>
  <section class="">
    <div class="container max-w-5xl mx-auto px-4">
      <section class="w-full" data-controller="pricing">
        <div class="flex items-center justify-center gap-4 mb-12 transition-all duration-300">
          <span data-pricing-target="monthlyBilling" class="transition-all duration-300 w-[11.25rem] text-gray-400 text-right">Pay Monthly</span>
          <label class="relative inline-flex items-center cursor-pointer transition-all duration-300">
            <input type="checkbox"
             class="sr-only peer"
             data-pricing-target="toggle"
             data-action="pricing#toggle">
            <div class="w-11 h-6 bg-gray-200 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-500"></div>
          </label>
          <div class="flex items-center gap-2 w-[11.25rem] transition-all duration-300">
            <span data-pricing-target="yearlyBilling" class="font-medium text-gray-400">Pay Annually</span>
            <span data-pricing-target="yearlyBillingBadge" class="text-xs text-gray-400 leading-5 font-mono font-medium bg-gray-200 px-[6px] py-[2px] rounded-full">17% OFF</span>
          </div>
        </div>
        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <div class="bg-gray-50 flex flex-col justify-between p-4 rounded-[1.5rem] min-h-[37.5rem] border border-gray-200 transition-all duration-300">
            <div>
              <h3 class="text-gray-400 bg-white w-fit px-2 py-1 rounded-full text-base mb-8">Starter</h3>
              <h4 class="text-[3.5rem] leading-[calc(4.5rem+4px)] tracking-[-0.04em] font-semibold text-gray-700">Free</h4>
              <p class="text-gray-400 mb-6 font-[1.125rem] leading-[1.4]">for everyone</p>
              <ul class="space-y-2 mb-8 text-gray-400 text-[1.125rem] leading-[1.4]">
                <li class="flex items-center gap-2">
                  <%= lucide_icon "check", class: "w-5 h-5 text-gray-400" %>
                  <span>Connect up to 3 bank accounts</span>
                </li>
                <li class="flex items-center gap-2">
                  <%= lucide_icon "check", class: "w-5 h-5 text-gray-400" %>
                  <span>More than 10,000 institutions</span>
                </li>
                <li class="flex items-center gap-2">
                  <%= lucide_icon "check", class: "w-5 h-5 text-gray-400" %>
                  <span>Globally available in any currency</span>
                </li>
                <li class="flex items-center gap-2">
                  <%= lucide_icon "check", class: "w-5 h-5 text-gray-400" %>
                  <span>Transactions and investment tracking</span>
                </li>
                <li class="flex items-center gap-2">
                  <%= lucide_icon "x", class: "w-5 h-5 text-gray-400" %>
                  <span class="text-gray-400">No access to Maybe AI</span>
                </li>
              </ul>
            </div>
            <div>
              <%= button_to "Try for free", "#",
              class: "bg-white text-[1.125rem] leading-[1.3] w-full py-3 px-4 mb-4 border border-gray-300 rounded-2xl text-center text-gray-800 hover:bg-gray-50 transition-colors",
              form: { data: { turbo: false } } %>
              <span  class="text-center text-sm mx-auto text-gray-500 flex justify-center gap-2">
                <%= lucide_icon "credit-card", class: "w-5 h-5 text-gray-400" %>
                <p>No credit card required</p>
              </span>
            </div>
          </div>
          <%# Maybe+ Plan %>
          <div class="bg-white flex flex-col justify-between p-4 rounded-[1.5rem] min-h-[37.5rem] border border-gray-200 transition-all duration-300">
            <div>
              <h3 class="text-gray-400 bg-gray-50 w-fit px-2 py-1 rounded-full text-base mb-8">Maybe +</h3>
              <%# Monthly Price %>
              <div data-pricing-target="monthlyPrice">
                <h4 class="text-[3.5rem] leading-[calc(4.5rem+4px)] tracking-[-0.04em] font-semibold text-gray-700">$9/month</h4>
                <p class="text-gray-400 mb-6">Billed monthly</p>
              </div>
              <%# Annual Price %>
              <div data-pricing-target="yearlyPrice" class="hidden">
                <h3 class="text-[3.5rem] leading-[calc(4.5rem+4px)] tracking-[-0.04em] font-semibold text-gray-700">$90/year<span class="text-xl font-medium tracking-[0] ml-[14px]" style="color: #7C5D3D"> or $1.73/week</span></h3>
                <p class="text-gray-400 mb-6">Billed annually, 2 months free</p>
              </div>
              <ul class="space-y-2 mb-8 text-gray-400 text-[1.125rem] leading-[1.4]">
                <li class="flex items-center gap-2">
                  <%= lucide_icon "sparkles", class: "w-5 h-5 text-amber-600" %>
                  <span>Unlimited access to Maybe AI</span>
                </li>
                <li class="flex items-center gap-2">
                  <%= lucide_icon "wallet", class: "w-5 h-5 text-amber-600" %>
                  <span>Unlimited accounts and account types</span>
                </li>
                <li class="flex items-center gap-2">
                  <%= lucide_icon "headphones", class: "w-5 h-5 text-amber-600" %>
                  <span>Priority customer support</span>
                </li>
                <li class="flex items-center gap-2">
                  <%= lucide_icon "zap", class: "w-5 h-5 text-amber-600" %>
                  <span>Early access to new features</span>
                </li>
                <li class="flex items-center gap-2">
                  <%= lucide_icon "check", class: "w-5 h-5 text-amber-600" %>
                  <span>Everything in Free</span>
                </li>
              </ul>
            </div>
            <div>
              <%= button_to "Unlock Maybe +", "#",
              class: "bg-white text-[1.125rem] leading-[1.3] w-full py-3 px-4 mb-4 border border-gray-300 rounded-2xl text-center text-gray-800 hover:bg-gray-50 transition-colors",
              form: { data: { turbo: false } } %>
              <span  class="text-center text-sm mx-auto text-gray-500 flex justify-center gap-2">
                <%= lucide_icon "banknote", class: "w-5 h-5 text-gray-400" %>
                <p>Full refund if it's not for you</p>
              </span>
            </div>
          </div>
        </div>
      </section>
    </div>
  </section>
  <%# FAQ Section %>
  <section class="py-16 pb-0 px-4">
    <div class="max-w-[800px] mx-auto">
      <div class="text-center mb-8">
        <h2 class="text-gray-700 font-medium leading-[1.1] text-5xl tracking-[-0.05] mb-2">FAQs</h2>
        <p class="text-gray-500 mb-4 text-lg leading-[1.4] max-w-[420px] mx-auto">Have a question that is not answered? You can contact us at <span class="text-gray-800">hey@maybe.co</span></p>
      </div>
      <dl class="" data-controller="faq">
        <% faq_questions.each_with_index do |faq, index| %>
          <div class="first:rounded-t-2xl p-4 text-lg last:rounded-b-2xl border border-gray-100 bg-white">
            <dt class="py-[2px]">
              <button
                class="flex w-full items-center justify-between"
                data-action="faq#toggle"
                data-faq-target="question"
                aria-expanded="false"
              >
                <span class="font-medium text-gray-800"><%= faq[:question] %></span>
                <%= lucide_icon "x", class: "w-4 h-4 text-gray-500 rotate-45 transition-transform duration-200",
                    data: { faq_target: "icon" } %>
              </button>
            </dt>
            <dd class="hidden overflow-hidden transition-[height] duration-200 ease-out" data-faq-target="answer">
              <div class="text-gray-500">
                <%= faq[:answer].html_safe %>
              </div>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </section>
</article>
