<%# locals: (name:, options:{}) -%>
<%= tag.svg(**options.reverse_merge(
    version: "1.1",
    xmlns: "http://www.w3.org/2000/svg",
    xmlns_xlink: "http://www.w3.org/1999/xlink",
    viewBox: "0 0 32 32",
    aria_hidden: true,
  )) do %>
  <g>
    <rect width="100%" height="100%" rx="50%" fill="#f5f5f5" opacity="0.1" />
    <text
      x="50%"
      y="50%"
      fill="#171717"
      text-anchor="middle"
      dy="0.35em"
      font-family="ui-sans-serif,system-ui,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol,Noto Color Emoji"
      font-size="16"
      font-weight="400">
      <%= name.scan(/\b\w/).join %>
    </text>
  </g>
<% end %>
