<footer class="bg-contain bg-top bg-no-repeat w-full p-0 pt-20" style="background-image: url(<%= asset_path('footer-cta-bg.svg') %>)">
  <%= render "shared/cta_waitlist" %>
  <section class="w-full pb-8 px-4 xl:px-0 mx-auto">
    <div class="max-w-6xl mx-auto mb-16 flex flex-col justify-between gap-x-4 md:flex-row">
      <div class="flex flex-col gap-y-4 mb-10 md:mb-0">
        <div><%= link_to image_tag("logo.svg", alt: "Maybe Logo", class: "h-6 inline"), root_path %></div>
        <p class="text-sm leading-[1.3] text-gray-500">The personal finance app for everyone.</p>
      </div>
      <div class="flex flex-col text-sm leading-6 w-[calc(60%+50px)] text-gray-500 justify-between md:flex-row">
        <div class="mb-10 md:mb-0">
          <h4 class="font-mono mb-4 text-sm leading-[1.125rem] uppercase text-gray-800">Resources</h4>
          <ul class="flex flex-col gap-y-1">
            <% footer_resources.each do |link| %>
              <li>
                <%= link_to link[:text], link[:path], class: "hover:text-gray-900 transition-all duration-150 ease-in-out" %>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="mb-10 md:mb-0">
          <h4 class="font-mono mb-4 text-sm leading-[1.3] uppercase text-gray-800">Tools</h4>
          <ul class="flex flex-col gap-y-1 mb-10">
            <% footer_tools.each do |link| %>
              <li>
                <%= link_to link[:text], link[:path], class: "hover:text-gray-900 transition-all duration-150 ease-in-out" %>
              </li>
            <% end %>
          </ul>
          <h4 class="font-mono mb-4 text-sm leading-[1.3] uppercase text-gray-800">Stocks</h4>
          <ul class="flex flex-col gap-y-1">
            <% footer_stocks.each do |link| %>
              <li>
                <%= link_to link[:text], link[:path], class: "hover:text-gray-900 transition-all duration-150 ease-in-out" %>
              </li>
            <% end %>
          </ul>
        </div>
        <div>
          <h4 class="font-mono mb-4 text-sm leading-[1.3] uppercase text-gray-800">Legal</h4>
          <ul class="flex flex-col gap-y-1 mb-10">
            <% footer_legal.each do |link| %>
              <li>
                <%= link_to link[:text], link[:path], class: "hover:text-gray-900 transition-all duration-150 ease-in-out" %>
              </li>
            <% end %>
          </ul>
          <h4 class="font-mono mb-4 text-sm leading-[1.3] uppercase text-gray-800">Connect</h4>
          <ul class="flex flex-row gap-x-6">
            <% footer_socials.each do |link| %>
              <li>
                <ul><%= link_to link[:icon], link[:path], class:"transition-all duration-250 ease-in-out opacity-45 hover:opacity-100" %></ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="max-w-6xl mx-auto px-6 md:px-4 flex flex-col text-sm leading-[1.3] text-center justify-center text-gray-500 md:justify-between md:flex-row md:text-left">
      <p class="mb-4 md:mb-0">&copy; <%= Time.now.year %> Maybe Finance, Inc.</p>
      <p class="flex gap-2 items-center justify-center md:justify-end">Built by people around the world <%= lucide_icon("globe", class: "w-4 h-4 inline") %></p>
    </div>
  </section>
  <%= image_tag "border-strip.svg", alt: "Maybe Stripe", class: "object-cover w-full h-[6px]" %>
</footer>
